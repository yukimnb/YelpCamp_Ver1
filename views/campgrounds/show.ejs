<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="..." />
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">&yen; <%= campground.price %> / 泊</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">編集する</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">削除する</button>
                </form>
            </div>
            <div class="card-footer text-muted">2 days ago</div>
        </div>
        <h3>レビュー</h3>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3">
            <div class="mb-3">
                <label class="form-label" for="rating">評価</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">コメント</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
            </div>
            <button class="btn btn-success">投稿する</button>
        </form>
    </div>
</div>
